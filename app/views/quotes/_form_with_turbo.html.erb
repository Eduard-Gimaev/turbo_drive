<%= form_with(model: @quote, local: false) do |form| %>
  <% if @quote.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@quote.errors.count, "error") %> errors prevented saving:</h2>
      <ul>
        <% @quote.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
